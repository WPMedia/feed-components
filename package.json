{
  "name": "@feed-components/root",
  "version:": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "dependencies": {
    "@babel/core": "^7.8.6",
    "@babel/preset-env": "^7.8.6",
    "@changesets/changelog-github": "^0.2.1",
    "@changesets/cli": "^2.5.2",
    "@manypkg/cli": "^0.10.0",
    "@preconstruct/cli": "^1.1.8",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-jest": "^23.8.1",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "jest": "^25.1.0",
    "jest-watch-typeahead": "^0.4.2",
    "prettier": "^1.19.1"
  },
  "scripts": {
    "postinstall": "preconstruct dev && manypkg check",
    "build": "preconstruct build",
    "lint": "yarn lint:eslint && yarn lint:prettier",
    "lint:eslint": "yarn eslint . --ext .js",
    "lint:prettier": "prettier --list-different \"packages/**/*.js\"",
    "prettier": "prettier --write \"packages/**/*.js\"",
    "test": "jest --config=jest.config.js"
  },
  "preconstruct": {
    "packages": [
      "packages/*"
    ]
  }
